{{#with Products}}
<form method="post" action="/products/{{id}}?_method=PUT">
  <h1>Product Editing</h1>
  <label> ID:
    <input readonly id="" type="text" name="id" value="{{id}}">
  </label>

  <label> Name:
    <input id="" type="text" name="name" value="{{name}}">
  </label>

  <label> Price:
    <input id="" type="text" name="price" value="{{price}}">
  </label>

  <label> Inventory:
    <input id="" type="text" name="inventory" value="{{inventory}}">
  </label>
  <input type="submit" value="Submit">
</form>
<br><a href="/products">PRODUCTS PAGE</a>{{/with}} {{#with Articles}}
<form method="post" action="/articles/{{id}}?_method=PUT">
  <h1>Article Editing</h1>
  <label> Title:
    <input type="text" name="title" value="{{title}}" id="">
  </label>

  <label> Body:
    <input type="text" name="body" value="{{body}}" id="">
  </label>

  <label> Author:
    <input type="text" name="author" value="{{author}}" id="">
  </label>
  <input type="submit" value="Submit">
</form>
<br><a href="/articles">ARTICLES PAGE</a>{{/with}}
