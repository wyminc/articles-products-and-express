{{#with Product}}
<form id="myForm" method="get" action="/products/blankedit">
  <h1>Product Editing</h1>
  <label> ID:
    <input id="productID" type="text" name="id">
  </label>

  <label> Name:
    <input id="" type="text" name="name">
  </label>

  <label> Price:
    <input id="" type="text" name="price">
  </label>

  <label> Inventory:
    <input id="" type="text" name="inventory">
  </label>
  <input type="submit" value="Submit">
</form>
{{/with}} {{#with Article}}
<form action="/articles" method="post">
  <h1>Article Editing</h1>
  <label> Title:
    <input type="text" name="title" id="">
  </label>

  <label> Body:
    <input type="text" name="body" id="">
  </label>

  <label> Author:
    <input type="text" name="author" id="">
  </label>
  <input type="submit" value="Submit">
</form>
{{/with}} {{#if id}}
<form method="post" action="/products/{{id}}?_method=PUT">
  <h1>Product Addition</h1>
  <label> ID:
    <input readonly id="" type="text" name="id" value="{{id}}">
  </label>

  <label> Name:
    <input id="" type="text" name="name" value="{{name}}">
  </label>

  <label> Price:
    <input id="" type="text" name="price" value="{{price}}">
  </label>

  <label> Inventory:
    <input id="" type="text" name="inventory" value="{{inventory}}">
  </label>
  <input type="submit" value="Submit">
</form> {{/if}} {{#if title}}
<form action="/articles" method="post">
  <h1>Article Addition</h1>
  <label> Title:
    <input type="text" name="title" value="{{title}}" id="">
  </label>

  <label> Body:
    <input type="text" name="body" value="{{body}}" id="">
  </label>

  <label> Author:
    <input type="text" name="author" value="{{author}}" id="">
  </label>
  <input type="submit" value="Submit">
</form> {{/if}}
