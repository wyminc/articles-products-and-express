{{#with SpecificProduct}}
<script>
  function submissionFunction() {
    let name = (document.getElementById("productName")).value;
    var action_src = `/products/${name}?_method=DELETE`;
    var deleteForm = document.getElementById('deleteForm');
    deleteForm.action = action_src;
  }
</script>
<form id="deleteForm" onsubmit="submissionFunction()" method="post">
  <h1>Product Deletion</h1>
  <div>Name does not exist</div>
  <br>
  <label> Name:
    <input type="text" name="name" value="{{name}}" id="productName">
  </label>

  <input type="submit" value="Submit">
</form>
<br><a href="/products">PRODUCTS PAGE</a>{{/with}} {{#with articles}}
