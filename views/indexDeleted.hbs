{{#with Products}}
<script>
  function submissionFunction() {
    let name = (document.getElementById("productName")).value;
    var action_src = `/products/search/${name}`;
    var searchForm = document.getElementById('searchForm');
    searchForm.action = action_src;
  }
</script>
<h1>Products</h1>
<br><form id="searchForm" onsubmit="submissionFunction()" method="get">
  <label> Search Product by Name:
    <input type="text" name="name" id="productName">
  </label>

  <input type="submit" value="Submit">
</form>
<br>
<br><div>Product has been deleted</div>
<br>
<br><a href="/products/new">NEW PRODUCT</a>
<br><a href="/products/delete">DELETE PRODUCT</a>
<br>
<br> {{#each products}}
<div>
  <a href="/products/{{id}}"> {{name}} </a>
  {{!-- <div class="description">{{price}}</div>
  <div class="description">{{inventory}}</div> --}}
</div>
{{/each}}
<br>
<br> <a href="/products/old">PREVIOUS PRODUCTS</a>
<br> <a href="/products/deleted">DELETED PRODUCTS</a>{{/with}} {{#with Articles}}
