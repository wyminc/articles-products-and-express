{{#if products.length}}
<h1>Products</h1>
{{#each products}}
<div>
  <a href="/products/{{id}}"> {{name}} </a>
  <div class="description">{{price}}</div>
  <div class="description">{{inventory}}</div>
</div>
{{/each}}
<br><a href="/products/new">NEW PRODUCT</a>{{/if}} {{#if articles.length}}
<h1>Articles</h1>
{{#each articles}}
<div>
  <a href="/articles/{{id}}"> {{title}} </a>
  <div class="description">{{body}}</div>
  <div class="description">{{author}}</div>
</div>
{{/each}}
<br><a href="/articles/new">NEW ARTICLE</a>{{/if}} {{#with Product}}
<h1>Products</h1>
<a href="/products/new">NEW PRODUCT</a>{{/with}} {{#with Article}}
<h1>Articles</h1>
